    <body class=" d-flex flex-column">
        
        {{>navbar}}

        
   
        <div class="d-flex flex-row justify-content-center mt-5 mb-5">
            

        <div class="col-8">

            <h1 class="text-center mb-3">Dejanos Una Pregunta o Comentario</h1>

        <form action="/contacto" method="POST" >

            <div class="form-group">
                <label for="exampleFormControlInput1"><b>Nombre</b></label>
                <input name = "nombre" type="nombre" class="form-control"  placeholder="Nombre">
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1"><b>Correo</b></label>
                <input name = "email" type="email" class="form-control" placeholder="name@example.com">
            </div>
  
            
            <div class="form-group">
                <label for="exampleFormControlTextarea1"><b>Comentario</b></label>
                <textarea name= "message" class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
            </div>

                <button type ="submit" class="btn btn-block">Enviar</button>

        </form>

        </div>
        

